{
    "name": "primosapp",
    "version": "1.0.0",
    "description": "Prueba",
    "author": "bulfonjf",
    "private": true,
    "scripts": {
      "dev": "cd \"src\" && yarn dev",
      "build": "yarn build:nuxt && yarn clean && yarn copyassets",
      "serve": "firebase serve --only functions,hosting",
      "deploy": "firebase deploy",
      "copyassets": "yarn copydist && yarn copystatic",
      "copydist": "xcopy .\\functions\\nuxt\\dist .\\public\\assets /E",
      "copystatic": "xcopy .\\src\\static .\\public /E",
      "clean": "rimraf public/assets/*",
      "build:nuxt": "cd \"src\" && yarn build"
    },
    "devDependencies": {
      "cross-env": "^5.0.5",
      "rimraf": "^2.6.2"
    }
  }